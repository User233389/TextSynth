<Window x:Class="TextSynth.AppResetFluentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextSynth"
        mc:Ignorable="d"
        Title="リセット確認" Height="250" Width="564" ResizeMode="NoResize" IsVisibleChanged="Window_IsVisibleChanged" ShowInTaskbar="False">
    <Grid>
        <StatusBar RenderTransformOrigin="0.5,0.5" Height="80" VerticalAlignment="Bottom" Margin="0,0,-1,0">
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StatusBar.RenderTransform>
            <Button Content="キャンセル" RenderTransformOrigin="0.5,0.5" Width="127" IsCancel="True" FontSize="14" HorizontalAlignment="Center" Click="Button_Click_1" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button Content="リセットして再起動" RenderTransformOrigin="0.5,0.5" Width="135" IsCancel="True" FontSize="14" Background="{DynamicResource {x:Static SystemColors.AccentColorLight2BrushKey}}" HorizontalAlignment="Center" Click="Button_Click" Foreground="Black" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </StatusBar>
        <Label HorizontalAlignment="Left" FontFamily="Segoe Fluent Icons" Content="&#xE7BA;" Margin="18,29,0,0" VerticalAlignment="Top" FontSize="36" Height="41"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Text="設定の内容を初期値にリセットします"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,64,0,0" TextWrapping="Wrap" Text="リセットを行うとTextSynth内で変更した設定を初期値に戻し、変更を適用するためソフトウェアを再起動します。この操作を元に戻すことはできません。よろしいですか?" VerticalAlignment="Top" Width="464"/>

    </Grid>
</Window>
