<Window x:Class="TextSynth.FluentFontDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextSynth"
        mc:Ignorable="d"
        Title="フォントを選択..." Height="456" Width="971" ResizeMode="NoResize" Loaded="Window_Loaded" ShowInTaskbar="False">
    <Grid>
        <StatusBar RenderTransformOrigin="0.5,0.5" Height="80" VerticalAlignment="Bottom">
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StatusBar.RenderTransform>
            <Button x:Name="CancellButton" Content="キャンセル" RenderTransformOrigin="0.5,0.5" Width="156" IsCancel="True" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="CancellButton_Click" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="YesButton" Content="適用" RenderTransformOrigin="0.5,0.5" Width="156" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" Click="YesButton_Click" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </StatusBar>
        <ListBox Name="FontNameListBox" FontSize="20" Margin="10,61,600,98" SelectionChanged="FontNameListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--Fonts.SystemFontFamilysを直接ItemsSourceにする場合-->
                    <!--<TextBlock Text="{Binding Source}" FontFamily="{Binding }"/>-->
                    <TextBlock Text="{Binding Key}" FontFamily="{Binding Value}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="サイズ:" HorizontalAlignment="Left" Margin="376,18,0,0" VerticalAlignment="Top" Width="44"/>
        <ComboBox x:Name="FontSizeCombobox" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="120" IsEditable="True" KeyDown="FontSizeCombobox_ValueChanged" DropDownClosed="FontSizeCombobox_ValueChanged" SelectionChanged="FontSizeCombobox_ValueChanged">
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
            <ComboBoxItem Content="14"/>
            <ComboBoxItem Content="16"/>
            <ComboBoxItem Content="18"/>
            <ComboBoxItem Content="20"/>
            <ComboBoxItem Content="22"/>
            <ComboBoxItem Content="24"/>
            <ComboBoxItem Content="36"/>
            <ComboBoxItem Content="48"/>
            <ComboBoxItem Content="72"/>
        </ComboBox>
        <GroupBox Header="サンプル" Margin="376,61,10,98">
            <TextBlock x:Name="FontSampleTextBlock" TextWrapping="Wrap" Text="テキストABC123@#+*;" VerticalAlignment="Center" FontFamily="Yu Gothic Light" Margin="24,0,17,0" FontSize="20"/>
        </GroupBox>
        <TextBox x:Name="FontSarchTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346" TextChanged="TextBox_TextChanged" />
    </Grid>


</Window>
