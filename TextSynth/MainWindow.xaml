<Window x:Class="TextSynth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextSynth"
        mc:Ignorable="d"
        Title="TextSynth" Height="614" Width="1102"
        LostMouseCapture="Window_MouseMove"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded" IsVisibleChanged="Window_IsVisibleChanged">
    <Grid>
        <Menu x:Name="MenuBar" VerticalAlignment="Top" Height="46">
            <MenuItem Header="ファイル">
                <MenuItem Header="開く" HeaderStringFormat="">
                    <MenuItem Header="WEBサイト" Click="ReadWebsite_Click"/>
                    <MenuItem Header="テキストファイル" Click="ReadTextFile_Click"/>
                </MenuItem>
                <MenuItem Header="WAVファイルとして保存" Click="SaveWAVFile_Click"/>
                <MenuItem Header="テキストファイルとして保存" Click="MenuItem_Click"/>
                <Separator/>
                <MenuItem x:Name="ExitButton" Header="閉じる" InputGestureText="Alt+Fanction+F4" Click="ExitButton_Click"/>
            </MenuItem>
            <MenuItem Header="テキスト">
                <MenuItem x:Name="FontMenu" Header="テキストボックスのフォントを変更" Click="FontMenu_Click"/>
            </MenuItem>
            <MenuItem Header="トランスポート">
                <MenuItem Header="再生・一時停止" Click="Button_Click"/>
                <MenuItem Header="リセット" Click="VoiceResetButton_Click"/>
                <Separator/>
                <MenuItem x:Name="MuteMenu" Header="ミュート" Click="Button_Click_2" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="表示">
                <MenuItem x:Name="FullScreenMenu" Header="全画面モード" Click="Button_Click_1" IsCheckable="True"/>
                <Separator/>
                <MenuItem x:Name="WindowTopMostMenu" Header="ウィンドウを最前面に表示" Click="WindowTopMostButton_Click" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="ツール">
                <MenuItem x:Name="SettingsMenu" Header="設定" Click="SettingsMenu_Click"/>
            </MenuItem>
            <MenuItem Header="ヘルプ">
                <MenuItem Header="ヘルプを参照"/>
                <MenuItem Header="チュートリアル"/>
                <Separator/>
                <MenuItem Header="TextSynthについて" Click="About_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar x:Name="MediaStatusBar" Margin="-3,0,120,0" VerticalAlignment="Bottom" Height="97">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
            <Button x:Name="VoiceResetButton" HorizontalAlignment="Center" Height="40" Width="40" FontFamily="Segoe Fluent Icons" Content="&#xE76b;" FontSize="16" Click="VoiceResetButton_Click"/>
            <Button x:Name="PlayAndPauseButton" HorizontalAlignment="Center" Height="60" Width="60" FontFamily="Segoe Fluent Icons" Content="&#xE769;" FontSize="20" ToolTip="" Click="Button_Click"/>
            <Button x:Name="VoiceRecodingButton" Width="60" Height="60" FontFamily="Segoe Fluent Icons" FontSize="20" Content="&#xE7C8;" Click="VoiceRecodingButton_Click" />
            <Button x:Name="MuteButton" HorizontalAlignment="Center" Height="40" Width="40" FontFamily="Segoe Fluent Icons" Content="&#xE74f;" FontSize="16" Click="Button_Click_2"/>
            <Slider x:Name="VolumeSlider" Width="136" Maximum="100" Value="100" ValueChanged="VolumeSlider_ValueChanged"/>
            <Label x:Name="VolumeLabel" Content="100%" Width="76" FontSize="14"/>
            <Label x:Name="VoiceSpeedIcon" Content="&#xec49;" Width="25" FontSize="20" FontFamily="Segoe Fluent Icons" Height="21"/>
            <Slider x:Name="VoiceSpeekSpeedSlider" Width="136" ValueChanged="Slider_ValueChanged" Minimum="-10"/>
            <Label x:Name="VoiceSpeedLabel" Content="0(デフォルト)" Width="79" FontSize="14"/>
            <Label x:Name="SelectVoiceIcon" Content="&#xEFA9;" Width="25" FontSize="20" FontFamily="Segoe Fluent Icons" Height="24"/>
            <ComboBox Width="156" SelectedIndex="0" Name="SelectVoiceComboBox">
                <ComboBoxItem Content="既定の音声"/>
                <ComboBoxItem Content="女性"/>
                <ComboBoxItem Content="男性"/>
                <ComboBoxItem Content="中性的"/>
            </ComboBox>
            <ToolBarPanel Height="64" Width="3"/>
        </StatusBar>
        <RichTextBox x:Name="rtb1" Margin="10,46,10,115" VerticalScrollBarVisibility="Visible" FontSize="10" FontFamily="Yu Gothic UI Light">
            <FlowDocument Name="FlowDoc1">
                <Paragraph FontFamily="Yu Gothic Light">
                    <Run Text="(話したいことを入力してください)" FontFamily="Yu Gothic Light" FontSize="20" Name="Text1" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <StatusBar x:Name="WindowSettingsStatusBar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="97" Width="120">
            <Button x:Name="FullScreenButton" HorizontalAlignment="Center" Height="40" Width="40" FontFamily="Segoe Fluent Icons" Click ="Button_Click_1" Content="&#xE740;" FontSize="16"/>
            <Button x:Name="WindowTopMostButton" HorizontalAlignment="Center" Height="40" Width="40" FontFamily="Segoe Fluent Icons" Click ="WindowTopMostButton_Click" Content="&#xE840;" FontSize="16"/>
        </StatusBar>
    </Grid>
</Window>
